{
  "swagger": "2.0",
  "info": {
    "title": "Tasks API",
    "description": "API para gestión de tareas con autenticación JWT. Soporta versiones v1 y v2.",
    "version": "1.0.0",
    "contact": {
      "name": "Tasks API Support"
    }
  },
  "host": "localhost:3000",
  "basePath": "/api",
  "schemes": ["http"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "securityDefinitions": {
    "Bearer": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header",
      "description": "JWT Authorization header using the Bearer scheme. Example: \"Authorization: Bearer {token}\""
    }
  },
  "definitions": {
    "AuthRequest": {
      "type": "object",
      "required": ["username", "password"],
      "properties": {
        "username": {
          "type": "string",
          "example": "admin"
        },
        "password": {
          "type": "string",
          "example": "password123"
        }
      }
    },
    "AuthResponse": {
      "type": "object",
      "properties": {
        "token": {
          "type": "string",
          "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
        }
      }
    },
    "Task": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "example": 1
        },
        "title": {
          "type": "string",
          "example": "Completar documentación de Swagger"
        },
        "description": {
          "type": "string",
          "example": "Agregar ejemplos de request y response a todos los endpoints"
        },
        "completed": {
          "type": "boolean",
          "example": false
        }
      }
    },
    "CreateTaskRequest": {
      "type": "object",
      "required": ["title"],
      "properties": {
        "title": {
          "type": "string",
          "minLength": 1,
          "example": "Nueva tarea importante"
        },
        "description": {
          "type": "string",
          "example": "Descripción detallada de la tarea"
        },
        "completed": {
          "type": "boolean",
          "default": false,
          "example": false
        }
      }
    },
    "UpdateTaskRequest": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "example": "Título actualizado"
        },
        "description": {
          "type": "string",
          "example": "Descripción actualizada"
        },
        "completed": {
          "type": "boolean",
          "example": true
        }
      }
    },
    "TasksResponse": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Task"
      }
    },
    "ErrorResponse": {
      "type": "object",
      "properties": {
        "error": {
          "type": "string",
          "example": "Task not found"
        }
      }
    },
    "ValidationError": {
      "type": "object",
      "properties": {
        "issues": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "path": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "message": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  },
  "paths": {
    "/v1/auth/login": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Autenticación de usuario",
        "description": "Autentica un usuario y devuelve un token JWT válido por 1 hora",
        "parameters": [
          {
            "in": "body",
            "name": "credentials",
            "description": "Credenciales de usuario",
            "required": true,
            "schema": {
              "$ref": "#/definitions/AuthRequest"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Autenticación exitosa",
            "schema": {
              "$ref": "#/definitions/AuthResponse"
            }
          },
          "400": {
            "description": "Datos de entrada inválidos",
            "schema": {
              "$ref": "#/definitions/ValidationError"
            }
          },
          "403": {
            "description": "Credenciales inválidas",
            "schema": {
              "$ref": "#/definitions/ErrorResponse"
            }
          }
        }
      }
    },
    "/v2/auth/login": {
      "post": {
        "tags": ["Authentication V2"],
        "summary": "Autenticación de usuario (V2)",
        "description": "Autentica un usuario y devuelve un token JWT válido por 1 hora (versión 2)",
        "parameters": [
          {
            "in": "body",
            "name": "credentials",
            "description": "Credenciales de usuario",
            "required": true,
            "schema": {
              "$ref": "#/definitions/AuthRequest"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Autenticación exitosa",
            "schema": {
              "$ref": "#/definitions/AuthResponse"
            }
          },
          "400": {
            "description": "Datos de entrada inválidos",
            "schema": {
              "$ref": "#/definitions/ValidationError"
            }
          },
          "403": {
            "description": "Credenciales inválidas",
            "schema": {
              "$ref": "#/definitions/ErrorResponse"
            }
          }
        }
      }
    },
    "/v1/tasks": {
      "get": {
        "tags": ["Tasks V1"],
        "summary": "Obtener todas las tareas",
        "description": "Retorna una lista de todas las tareas del usuario autenticado",
        "security": [
          {
            "Bearer": []
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de tareas obtenida exitosamente",
